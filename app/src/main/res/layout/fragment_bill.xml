<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/sel_color"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="35dp"
                android:background="@color/colorPrimary"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="@string/hours2"
                />
            <EditText
                android:id="@+id/edt_hour"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".5"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:hint="0.0"
                android:textColorHint="@color/gray2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="35dp"
                android:background="@color/colorPrimary"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="@string/hours_cost"
                />
            <TextView
                android:id="@+id/tv_hour_cost"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".5"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="0.0"
                android:textColorHint="@color/gray2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="35dp"
                android:background="@color/colorPrimary"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="@string/cost_of_spare_parts"
                />
            <EditText
                android:id="@+id/edt_spare_part"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".5"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColorHint="@color/gray2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="35dp"
                android:background="@color/colorPrimary"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="@string/delivery_cost"
                />
            <EditText
                android:id="@+id/edt_delivery"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".5"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColorHint="@color/gray2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="35dp"
                android:background="@color/colorPrimary"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="@string/total_cost"
                />
            <TextView
                android:id="@+id/tv_total_cost"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".5"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColorHint="@color/gray2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="35dp"
                android:background="@color/colorPrimary"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="@string/discount"
                />
            <EditText
                android:id="@+id/edt_discount"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".5"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColorHint="@color/gray2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="35dp"
                android:background="@color/colorPrimary"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="@string/total"
                />
            <TextView
                android:id="@+id/tv_total"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".5"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:textColorHint="@color/gray2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="35dp"
                android:background="@color/colorPrimary"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="@string/payment"
                />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".5"
                android:layout_gravity="center_vertical"
                android:background="@color/white"

                >

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@color/colorPrimary"
                    >

                </Spinner>

                <TextView
                    android:id="@+id/tv_payment_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="0.0"
                    android:textColorHint="@color/gray2"
                    android:visibility="gone"
                    />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >
            <Button
                android:id="@+id/btn_send"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/ll_add_photo"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="@string/send"
                android:textSize="17sp"
                android:layout_marginEnd="10dp"
                tools:ignore="RtlCompat"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btn_total"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/ll_add_photo"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="@string/total"
                android:textSize="17sp"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>